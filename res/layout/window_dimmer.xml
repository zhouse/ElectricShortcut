<?xml version="1.0" encoding="utf-8"?>       
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/linearLayout1" 
    android:layout_height="wrap_content" 
    android:background="@drawable/rounded_shape_white"
	android:layout_gravity="center"
    android:layout_width="294dip">  

    <TextView 
        android:id="@+id/textView1"
      	android:layout_height="45dip" 
       	android:layout_width="fill_parent"
       	android:background="@drawable/window_dimmer_text_shape"
       	android:textSize="22dip"
       	android:paddingLeft="15dip"
       	android:textColor="#FFFFFFFF"
       	android:singleLine="true"/>    
    	
   	<ImageView
	    android:id="@+id/deviceIcon2"
	    android:gravity="center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_height="wrap_content"
	    android:src="@drawable/dimmer_icon_active2" />

    <TextView 
	    android:id="@+id/dim_lvl_txt"
	    android:textColor="#FFa7c739"
      	android:layout_height="wrap_content" 
       	android:layout_width="wrap_content"
       	android:layout_centerHorizontal="true"
		android:layout_marginRight="35dip"
       	android:paddingTop="45dip"
       	android:textSize="50dip"
       	android:singleLine="true"/>
    	
	<SeekBar 
    	android:id="@+id/dimm_lvl"
	    android:progressDrawable="@drawable/window_dimmer_seekbar_background"
	    android:adjustViewBounds="true"
	    android:layout_marginTop="123dip"
    	android:max="100"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
	    android:layout_gravity="center"
    	android:layout_height="35dip" 
	    android:layout_width="fill_parent"   
	    android:thumb="@null"/>


		<LinearLayout
		   	android:id="@+id/buttonLinearLayout" 
			android:weightSum="1.0"
			android:orientation="horizontal"
		    android:layout_marginTop="173dp"
		    android:layout_height="wrap_content" 
		    android:layout_width="fill_parent">  
		    	
			<Button
		    	android:id="@+id/dimmer_off"
		    	android:text="@string/window_dimmer_set_off"
		    	android:layout_gravity="left"
		  		android:layout_weight="0.5"
		  		android:layout_width="0dip"
		    	android:layout_height="45dp"
		    	android:layout_marginRight="1dip"
		    	android:textColor="#ffffff"
		    	android:background="@drawable/window_dimmer_button_left"
			    />
		
			<Button
		    	android:id="@+id/dimmer_max"
		    	android:text="@string/window_dimmer_set_on"
		    	android:layout_gravity="right"
		  		android:layout_weight="0.5"
		  		android:layout_width="0dip"
		    	android:layout_height="45dp"
		    	android:textColor="#ffffff"
		    	android:background="@drawable/window_dimmer_button_right"
			    />
		</LinearLayout>

</RelativeLayout>
