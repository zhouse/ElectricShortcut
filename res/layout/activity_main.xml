    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context="${relativePackage}.${activityClass}" >
	
	<RelativeLayout
	    android:layout_width="200dp"
	    android:layout_height="match_parent"
	    android:background="#FF00FF"
